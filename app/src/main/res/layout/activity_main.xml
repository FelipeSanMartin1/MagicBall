<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@drawable/fondo">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="40dp"
        android:text="Conoce El Futuro !!!"
        android:textColor="#bd44ca"
        android:textSize="30sp"
        android:textStyle="bold|italic" />

    <TextView
        android:layout_width="387dp"
        android:layout_height="67dp"
        android:layout_gravity="center"
        android:text="\t\t\t\t\t\t\t\t\t\t Solo haz una pregunta
         \n\t\t\t\t\t\t\t y presiona la bola de cristal"
        android:textColor="#9494b8"
        android:textSize="22sp"
        android:textStyle="bold|italic" />


    <EditText
        android:id="@+id/question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="Escribe tu Pregunta"
        android:inputType="textShortMessage"
        android:textColor=" #ff9900"
        android:textColorHint="#3d3d5c"
        android:textSize="24sp" />

    <ImageButton
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="258dp"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/bolacristal" />

    <TextView
        android:id="@+id/respuestavista"
        android:layout_width="wrap_content"
        android:layout_height="98dp"
        android:layout_gravity="center"
        android:layout_margin="60dp"
        android:text="..."
        android:textColor="#ff3385"
        android:textSize="26sp"
        android:textStyle="bold" />


</LinearLayout>